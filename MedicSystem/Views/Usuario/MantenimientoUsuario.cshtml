@using MedicSystem.Core.Application.ViewModels.Usuarios;
@model List<UsuarioViewModel>
@{
    ViewData["Title"] = "Usuarios";
}

<h1 class="text-center">Usuarios</h1>

<div>
    <a asp-controller="Usuario" asp-action="Add" class="btn btn-success">Nuevo Usuario</a>
</div>

<table class="table table-hover mt-4">
    <thead>
        <tr>
            <th class="text-center">
                Nombre
            </th>
            <th class="text-center">
                Apellido
            </th>
            <th class="text-center">
                Correo
            </th>
            <th class="text-center">
                Nombre de Usuario
            </th>
            <th class="text-center">
                 Tipo de Usuario
            </th>
            <th>
                 Acciones
            </th>
        </tr>
    </thead>
    <tbody>

        @if (Model.Count == 0 || Model == null)
        {
            <tr>
                <td colspan="2" class="text-center">
                    No hay usuarios registrados
                </td>
            </tr>
        }
        else
        {            
            @foreach (UsuarioViewModel item in Model)
            {
                <tr>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Apellido)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Correo)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.NombreUsuario)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.TipoUsuario)
                    </td>
                    <td>
                        <a asp-controller="Usuario" asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id">Edit</a> |
                        <a asp-controller="Usuario" asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        }


    </tbody>
</table>


