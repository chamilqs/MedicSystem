@using MedicSystem.Core.Application.ViewModels.Usuarios;
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<section class="vh-100" style="margin-top:-60px;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp"
                                 alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">                             
                                <form method="post" asp-controller="Usuario" asp-action="Index">
                                    <h5 class="fw-normal fs-4 mb-5 pb-3 text-center" style="letter-spacing: 1px; margin-top:-50px;">Inicia sesión en tu cuenta</h5>

                                    <div>
                                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input id="username" class="form-control form-control-lg" asp-for="NombreUsuario">
                                        <label class="form-label" for="username">Nombre de usuario</label>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input id="password" class="form-control form-control-lg" asp-for="Password">
                                        <label class="form-label" for="password">Contraseña</label>
                                    </div>

                                    <div class="pt-1 mb-4">
                                        <button type="submit" class="btn btn-dark btn-lg btn-block">Iniciar sesión</button>
                                    </div>

                                    <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                        ¿No tienes una cuenta? <a asp-controller="Usuario" asp-action="Add"
                                                                  style="color: #393f81;">Registrate aquí</a>
                                    </p>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>