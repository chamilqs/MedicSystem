@using MedicSystem.Core.Application.ViewModels.ResultadosDeLaboratorio;
@using MedicSystem.Core.Domain.Enum;
@model SaveResultadoDeLaboratorioViewModel
@{
    ViewData["Title"] = "Reportar";
}

<div class="container-fluid">

    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header bg-dark text-light">
                    <h4 class="text-center">Reportar resultado</h4>
                </div>
                <div class="card-body">
                    <form method="post" asp-controller="ResultadoDeLaboratorio" asp-action="Reportar">

                        <div class="mb-3">
                            <label asp-for="Resultado" class="form-label">Resultado de la prueba: </label>
                            <textarea rows="10" cols="15" asp-for="Resultado" class="form-control"></textarea>
                            <span asp-validation-for="Resultado" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary fw-bold">Guardar</button>
                        <a asp-controller="ResultadoDeLaboratorio" asp-action="Index" class="btn btn-warning fw-bold">Regresar</a>

                    </form>

                </div>

            </div>
        </div>
    </div>

</div>

